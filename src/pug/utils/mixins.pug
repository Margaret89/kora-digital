mixin h1(v)
	.container
		.row
			.col-12
				h1= v


mixin breadcrumbs(links)
	- var len=links.length

	.breadcrumb-wrap
		.container
			.row
				.col-12
					ul.breadcrumb.d-none.d-md-flex
						- var i=0
						while i < len-1
							li.breadcrumb__item
								if(i==0)
									+svg('ic-home-shadow','ic-home-shadow', '22', '20')
								a(href=links[i].href).breadcrumb__link=links[i].name
								+svg('ic-arrow-page-r-shadow','ic-arrow-page-r-shadow', '11', '11')
							- i++
						li.breadcrumb__item
							span=links[i].name

					.d-md-none
						.link-back
							+svg('ic-back-shadow','ic-back-shadow', '17', '20')
							.link-back__text Back

mixin svg(icon, name_class, width,height)
	svg.icon(class=name_class?name_class:'', width=width?width:'', height=height?height:'')
		use(xlink:href='assets/sprites/sprite.svg#'+icon)