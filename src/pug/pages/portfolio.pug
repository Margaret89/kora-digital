						.form-bg__text Fill out the details in the form below and we will get back to you as soon as possible

						.form-bg__content
							-
								var fileds=[
									{icon:'ic-person', icon_width:'20', icon_height:'21', placeholder:'Name', type:'text'},
									{icon:'ic-phone', icon_width:'20', icon_height:'21', placeholder:'Phone', type:'text'},
									{icon:'ic-mail', icon_width:'22', icon_height:'15', placeholder:'E-mail', type:'email'},
								]
							each item in fileds
								.form-bg__field
									input(type=item.type, value=item.value, placeholder=item.placeholder)

									.form-bg__icon
										+svg(item.icon, item.icon, item.icon_width, item.icon_height)

							button.btn
								span.btn__text
									+svg('ic-mail-fly','ic-mail-fly', '35', '21')
