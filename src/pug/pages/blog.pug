extends ../layout/main

block variables
	- var title = 'Blog';

block content
	section.top-block.top-block_end(style="background-image: url(assets/img/bg-blog.jpg)")
		-
			var breadcrumbs=[
				{href:'/',name:'Home'},
				{href:'#',name:'Blog'},
			];

		
		+breadcrumbs(breadcrumbs)

		.container
			.row
				.col-12
					.top-block__content.top-block__content_big
						.top-block__head BLog

						.top-block__text.top-block__text_line Share with us the insights and information we have gathered over the years, here you can find all the world's hottest news and updates in the areas of website building, SEO promotion, digital marketing, systems development and more.

						-
							var list=[
								{title:'All', status:'active'},
								{title:'Glossary'},
								{title:'Marketing'},
								{title:'Mobile'},
								{title:'Web'},
							]

						.top-filter
							each item in list
								a(href="#").top-filter__item(class=item.status?'active':'')= item.title

		
		img.top-block__triangle.top-block__triangle_left(src="assets/img/triangle-left.png", alt="")
		img.top-block__triangle.top-block__triangle_right(src="assets/img/triangle-right.png", alt="")
		
		.btn-scroll

