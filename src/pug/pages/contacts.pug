extends ../layout/main

block variables
	- var title = 'Contacts';

block content
	section.top-block(style="background-image: url(assets/img/bg-contacts.jpg)")
		-
			var breadcrumbs=[
				{href:'/',name:'Home'},
				{href:'#',name:'Contacts'},
			];

		+breadcrumbs(breadcrumbs)

		.container
			.row
				.col-12
					.top-block__content
						.top-block__head.top-block__head_line-bottom Contacts

						.top-block__text For professional and courteous advice, contact us any way you want.
							br
							|We will take care of you!
		
		img.top-block__triangle.top-block__triangle_left(src="assets/img/triangle-left.png", alt="")
		img.top-block__triangle.top-block__triangle_right(src="assets/img/triangle-right.png", alt="")
		
		.btn-scroll

	section.contacts-wrap
		.container
			.row
				.col-6
					.h2 Company contacts

					.contacts-list
						.contacts-list__item
							.contacts-list__title
								span.contacts-list__title-text Office Adress
								+svg('ic-marker','ic-marker', '24', '32')

							.contacts-list__text 213464, City name, Street, House 24. 19
								br
								|Text, text, text...

						.contacts-list__item
							.contacts-list__title
								span.contacts-list__title-text Phone
								+svg('ic-phone','ic-phone', '29', '31')

							.contacts-list__text +00 (000) 000-00-00

						.contacts-list__item
							.contacts-list__title
								span.contacts-list__title-text Company e-mail
								+svg('ic-mail','ic-mail', '32', '22')

							.contacts-list__text example@mail.com &nbsp; example@mail.com

				.col-6
					.form-site.form-site_semi-vertical
						.form-site__head Contact us
						
						.form-site__text Fill out the details in the form below and we will get back to you as soon as possible

						.form-site__content
							-
								var fileds=[
									{icon:'ic-person', icon_width:'29', icon_height:'30', value:'Jhon', type:'text'},
									{icon:'ic-phone', icon_width:'29', icon_height:'30', placeholder:'Phone', type:'text'},
									{icon:'ic-mail', icon_width:'32', icon_height:'22', placeholder:'E-mail', type:'email'},
									{placeholder:'... Type message', type:'textarea'},
								]
							each item in fileds
								if(item.type=='textarea')
									.form-site__field.form-site__field_big
										textarea(placeholder=item.placeholder)
								else
									.form-site__field
										input(type=item.type, value=item.value, placeholder=item.placeholder)

										.form-site__icon
											+svg(item.icon, item.icon, item.icon_width, item.icon_height)

							button.btn
								span.btn__text
									+svg('ic-mail-fly','ic-mail-fly', '35', '21')
									span Send

	section.map
		iframe(src='https://yandex.ru/map-widget/v1/?um=constructor%3Ab556c41470f82b01f2b252ee511bcba0bdd6caab28391f15c2772ea2f75fd8ef&source=constructor', width='100%', height='500', frameborder='0')

	section.invite
		.container
			.row
				.col-12
					.invite__content
						.invite__head Think you're free to connect?

						.invite__text More than happy to join you in the family and lead you to success in Kora Digital!

						a.btn.btn_small(href='#')
							span.btn__text
								+svg('ic-cup','ic-cup', '30', '30')
								span Let's meet for coffee
