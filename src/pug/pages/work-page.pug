extends ../layout/main

block variables
	- var title = 'Work page';

block content
	section.top-slider-wrap
		-
			var breadcrumbs=[
				{href:'/',name:'Home'},
				{href:'#',name:'Portfolio'},
				{href:'#',name:'Work Title'},
			];
		+breadcrumbs(breadcrumbs)

		-
			var list=[
				'portf-slide1.jpg',
				'portf-slide2.jpg',
				'portf-slide3.jpg',
				'portf-slide4.jpg',
				'portf-slide5.jpg',
			]

		.swiper-container.top-slider.js-top-slider
			.swiper-wrapper
				each item in list
					.swiper-slide.top-slider__item(style="background-image: url(assets/img/"+item+")")
				
			.swiper-pagination.js-swiper-pagination


	section.portfolio-detail
		.container
			.row
				.col-4
					.like
						+svg('ic-like','ic-like', '23', '25')
						span.like__num 456 

				.col-4
					h1.portfolio-detail__head Lorem ipsum dolor sit amet, consectetur

				.col-4.d-flex.justify-content-end
					.social-page
						-
							var list=[
								{icon:'ic-watchapp', width:'23', height:'23'},
								{icon:'ic-in', width:'17', height:'17'},
								{icon:'ic-fb', width:'10', height:'23'},
								{icon:'ic-share', width:'18', height:'18'},
							]

						each item in list
							a(href="#").social-page__item
								+svg(item.icon, item.icon, item.width, item.height)
			

			.row
				.col-12
					.portfolio-detail__text Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Quis ipsum suspendisse ultrices gravida. Risus commodo viverra maecenas accumsan lacus vel facilisis.

			.row
				.col-12
					-
						var list=[
							{title:'Build image sites'},
							{title:'Web Development'},
							{title:'Branding'},
							{title:'Digital marketing'},
						]
						
					ul.portf-nav
						each item in list
							a(href="#").portf-nav__item(class=item.status?'active':'')= item.title


				

	section.form-bg-wrap
		img.form-bg-wrap__triangle.form-bg-wrap__triangle_left(src="assets/img/triangle-left-up.png", alt="")
		img.form-bg-wrap__triangle.form-bg-wrap__triangle_right(src="assets/img/triangle-right-up.png", alt="")

		.container
			.row
				.col-12
					.form-bg
						.form-bg__title Want to know more?

						.form-bg__text Fill out the details in the form below and we will get back to you as soon as possible

						.form-bg__content
							-
								var fileds=[
									{icon:'ic-person', icon_width:'20', icon_height:'21', placeholder:'Name', type:'text'},
									{icon:'ic-phone', icon_width:'20', icon_height:'21', placeholder:'Phone', type:'text'},
									{icon:'ic-mail', icon_width:'22', icon_height:'15', placeholder:'E-mail', type:'email'},
								]
							each item in fileds
								.form-bg__field
									input(type=item.type, value=item.value, placeholder=item.placeholder)

									.form-bg__icon
										+svg(item.icon, item.icon, item.icon_width, item.icon_height)

							button.btn
								span.btn__text
									+svg('ic-mail-fly','ic-mail-fly', '35', '21')
									span Send