extends ../layout/main

block variables
	- var title = 'Main';

block modal
	.bg-shadow

	.popup-wrap
		.popup
			.popup__close
				+svg('ic-close','ic-close', '22', '22')
			
			.form-site.form-site_vert
				.form-site__head Get our estimate
				
				.form-site__text Fill out the details in the form below and we will get back to you as soon as possible

				.form-site__content
					-
						var fileds=[
							{icon:'ic-person', icon_width:'29', icon_height:'30', placeholder:'Name', type:'text'},
							{icon:'ic-phone', icon_width:'29', icon_height:'30', placeholder:'Phone', type:'text'},
							{icon:'ic-mail', icon_width:'32', icon_height:'22', placeholder:'E-mail', type:'email'},
						]
					each item in fileds
						.form-site__field
							input(type=item.type, value=item.value, placeholder=item.placeholder)

							.form-site__icon
								+svg(item.icon, item.icon, item.icon_width, item.icon_height)

					a.btn(href='#')
						span.btn__text
							+svg('ic-mail-fly','ic-mail-fly', '35', '21')
							span Send

block content
	include ../components/main-page