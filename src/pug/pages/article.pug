	section.blog-wrap.bg-grey
		.container
			.row
				.col-12
					h2 It is interesting for you

					.blog-wrap__text
						p All the world's hottest news and updates in website building, SEO promotion, digital marketing, web development and systems development.

					
					
					
		.blog-list
			-
				var list=[
					{img:'blog1.jpg', title:'Lorem ipsum dolor sit', text:'Quis ipsum suspendisse ultrices gravida. Risus commodo viverra maecenas accumsan lacus vel facilisis.'},
					{img:'blog2.jpg', title:'Lorem ipsum dolor sit', text:'Quis ipsum suspendisse ultrices gravida. Risus commodo viverra maecenas accumsan lacus vel facilisis.'},
