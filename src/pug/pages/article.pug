				]
			.container
				.row
					each item in list
						.col-4
							.blog-list__item
								a(href="#").blog-list__img-wrap
									.blog-list__img(style="background-image: url(assets/img/"+item.img+")")

								.blog-list__title
									a(href="#")= item.title

								.blog-list__text= item.text

				.blog-list__more
					a.btn(href='#')
						span.btn__text
							span Read more
							+svg('ic-arrow-dot','ic-arrow-dot', '55', '23')

	section.form-bg-wrap
		img.form-bg-wrap__triangle.form-bg-wrap__triangle_left(src="assets/img/triangle-left-up-grey.png", alt="")
		img.form-bg-wrap__triangle.form-bg-wrap__triangle_right(src="assets/img/triangle-right-up-grey.png", alt="")

		.container
			.row
				.col-12
					.form-bg
						.form-bg__title Want to know more?

						.form-bg__text Fill out the details in the form below and we will get back to you as soon as possible

						.form-bg__content
							-
								var fileds=[
									{icon:'ic-person', icon_width:'20', icon_height:'21', placeholder:'Name', type:'text'},
									{icon:'ic-phone', icon_width:'20', icon_height:'21', placeholder:'Phone', type:'text'},
									{icon:'ic-mail', icon_width:'22', icon_height:'15', placeholder:'E-mail', type:'email'},
								]
							each item in fileds
								.form-bg__field
									input(type=item.type, value=item.value, placeholder=item.placeholder)

									.form-bg__icon
										+svg(item.icon, item.icon, item.icon_width, item.icon_height)

							a.btn(href='#')
								span.btn__text
									+svg('ic-mail-fly','ic-mail-fly', '35', '21')
									span Send