footer.footer
	.footer-top
		.container-fluid
			.row
				.col-12
					.footer-top__content
						.footer-top__logo
							img(src="assets/img/logo.svg", alt="Logo")

						.footer-top__info
							.footer-social
								-
									var list=[
										{icon:'ic-watchapp', width:'24', height:'24'},
										{icon:'ic-in', width:'19', height:'19'},
										{icon:'ic-fb', width:'12', height:'24'},
										{icon:'ic-be', width:'25', height:'15'},
										{icon:'ic-drib', width:'24', height:'24'},
									]

								each item in list
									a(href="#").footer-social__item
										+svg(item.icon, item.icon, item.width, item.height)


							.footer-top__phone.d-none.d-md-inline-flex
								a(href="tel:+0000000000") +00 000-000-00

							a(href="#").btn-form
								span.btn-form__content
									span.d-none.d-md-inline
										+svg('ic-mail-fill','ic-mail-fill', '23', '16')
									span.d-md-none
										+svg('ic-phone-fill','ic-phone-fill', '25', '25')
							
	.footer-main
		.container-fluid
			.row
				-
					var list = [
						'Category- 1',
						'Category- 2',
						'Category- 3',
						'Category- 4',
						'Category- 5',
						'Category- 6',
					]

				-
					var submenu = [
						'Link to the section -1',
						'Link to the section -2',
						'Link to the section -3',
						'Link to the section -4',
					]

				each menu in list
					.col-6.col-md-4.col-xxl-2
						ul.footer-menu
							li.footer-menu__item
								.footer-menu__title
									a(href="#").footer-menu__link= menu

								ul.footer-menu__sub
									each item in submenu
										li.footer-menu__subitem
											a(href="#").footer-menu__sublink= item

